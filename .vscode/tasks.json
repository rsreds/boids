{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ compila il file attivo con SFML",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileWorkspaceFolder}/bin/${fileBasenameNoExtension}",
        "-lsfml-window",
        "-lsfml-graphics",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Attivit√† generata dal debugger."
    }
  ],
  "version": "2.0.0"
}